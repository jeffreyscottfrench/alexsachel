<section class="fullpage contact top-edge" id="section-contact">
  <header class="header__section">
    <h3 class="title__section">
      <span class="no__break letter-spacing">Say hello</span> <span class="no__break letter-spacing">to better style</span>
    </h3>
  </header>

  <main class="main__section">
    <article class="article__contact">
      <header class="header__article">
        <h4 class="title__article">
          Ready to get to work?
        </h4>
      </header>
      <p>
        If you're ready to get started, click the button to fill out a brief questionnaire and we'll reach out to setup your first consultation.
      </p>
      <button class="call-to-action">
        <a id="new-client-link-contact" href="#section-overlay" class="js__toggleDisplayLink" data-targetEl="section-overlay">Get Started</a>
      </button>
    </article>
  </main>

  <footer class="footer__section" id="Contact-Footer">
    <article class="article__contact" id="Contact-MailChimp">
      <header class="header__form">
        <h4 class="title__article">Subscribe To The Newsletter</h4>
      </header>
      {% include "partials/mailChimp_signup.njk" %}
    </article>
    <article class="article__contact" id="Contact-Social">
      <header class="header__social">
        <h4 class="title__article">Get In Touch</h4>
      </header>
      {% include "partials/social_links.njk" %}
    </article>
  </footer>
</section>

{% block scripts %}
  <script type="text/javascript" src="//downloads.mailchimp.com/js/signup-forms/popup/unique-methods/embed.js" data-dojo-config="usePlainJson: true, isDebug: false"></script><script type="text/javascript">window.dojoRequire(["mojo/signup-forms/Loader"], function(L) { L.start({"baseUrl":"mc.us19.list-manage.com","uuid":"3ede874ee48fc9474e4e8cebc","lid":"4af150efa6","uniqueMethods":true}) })</script>
{% endblock %}