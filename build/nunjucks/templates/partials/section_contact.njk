<section class="fullpage contact top-edge" id="section-contact">
  <header class="header__section">
    <h3 class="title__section">
      <span class="letter-spacing">Say hello</span><span class="letter-spacing"> to better</span><span class="letter-spacing"> style</span>
    </h3>
  </header>
  <div class="container__contactForm">
    <form action="/secure_scripts/contact-phpmailer.php" method="post" id="form-contact">
      <div class="fieldset">

        <p>
          <label class="form__label" for="name">Name
          </label>
          <input aria-required="true" id="author" name="name" pattern="^([- \w\d\u00c0-\u024f]+)$"
            required="required" size="20" spellcheck="false" title="Your name (no special characters, diacritics are okay)"
            type="text" value="" autocomplete="name" />
        </p>

        <p>
          <label class="form__label" for="email">Email
          </label>
          <input aria-required="true" id="email" name="email" pattern="^(([-\w\d]+)(\.[-\w\d]+)*@([-\w\d]+)(\.[-\w\d]+)*(\.([a-zA-Z]{2,5}|[\d]{1,3})){1,2})$"
            required="required" size="30" spellcheck="false" title="Your email address"
            type="email" value="" autocomplete="email" />
        </p>

        <p>
          <label class="form__label" for="main_phone">Phone
          </label>
          <input aria-required="true" id="phone" name="main_phone" pattern="^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$"
            size="30" spellcheck="false" title="Your phone number" type="tel" value="" autocomplete="tel"/>
          <input style="display:none;" name="info" type="text" placeholder="hp-safety" value=""/>
        </p>
        <p class="form__textarea">
          <label class="form__label" for="comments">Comment
          </label>
          <textarea aria-required="false" cols="40" id="text" name="comments"
            rows="10" spellcheck="true" title="Your comment"></textarea>
        </p>

      </div>
      <div class="fieldset form__buttons">

        <button name="reset" type="reset" id="reset">Reset</button>
        <button name="save" type="submit" id="submit">Send</button>

      </div>
    </form>
  </div>
</section>